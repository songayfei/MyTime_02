<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/month_bar"
        android:id="@+id/month_view"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_day_willshow_list_item"
            android:textColor="@android:color/darker_gray"
            android:layout_margin="10dp"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="30日"/>
        <ImageView
            android:id="@+id/iv_icon_lvwillshow_item"
            android:background="@drawable/img_default_300x200"
            android:layout_width="90dp"
            android:layout_height="135dp"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name_lvwillshow_item"
                android:padding="2dp"
                android:textSize="17sp"
                android:text="云中行走"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/tv_type_lvwillshow_item"
                android:padding="2dp"
                android:textSize="15sp"
                android:text="1541人想看-冒险"
                android:textColor="#f70"
                android:singleLine="true"
                android:ellipsize="end"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_director_lvwillshow_item"
                android:padding="2dp"
                android:textSize="15sp"
                android:text="导演：冯小刚"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:padding="2dp"
                    android:id="@+id/btn_prebuy_lv_willshow_item"
                    android:layout_marginLeft="5dp"
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:background="@drawable/home_button_movie"
                    android:text="超前预售"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
                <Button
                    android:id="@+id/btn_movie_lv_willshow_item"
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/actor_detail_unlike_background_on"
                    android:text="预告片"
                    android:textColor="#FF669E10"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="#55000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
