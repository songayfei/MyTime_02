<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.atguigu.mytime.view.ObservableScrollView
            android:id="@+id/scrollView_obser"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:background="@drawable/mine_main_title_bg"
                        android:layout_width="match_parent"
                        android:layout_height="170dp">
                        <ImageButton
                            android:id="@+id/ib_user_picture"
                            android:src="@drawable/mine_main_logout_head"
                            android:background="@android:color/transparent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Button
                            android:id="@+id/bt_login_user"
                            android:layout_centerVertical="true"
                            android:background="@drawable/balance_bg"
                            android:text="登陆"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/ib_user_picture"
                            android:layout_marginLeft="20dp"
                            android:layout_width="100dp"
                            android:layout_height="38dp" />
                        <Button
                            android:id="@+id/bt_regist_user"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bind_register_login_background"
                            android:text="注册"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/bt_login_user"
                            android:layout_marginLeft="20dp"
                            android:layout_width="100dp"
                            android:layout_height="38dp" />

                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageButton
                                android:src="@drawable/act_my_home_cart"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textSize="15dp"
                                android:text="购物车"
                                android:textColor="@android:color/black"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageButton
                                android:id="@+id/btn_user_movie_ticke"
                                android:src="@drawable/act_my_home_tickets"
                                android:layout_gravity="center_horizontal"
                                android:background="@android:color/transparent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView

                                android:textSize="15dp"
                                android:text="电影票订票"
                                android:textColor="@android:color/black"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageButton
                                android:id="@+id/btn_user_goods_order"
                                android:src="@drawable/act_my_home_goods"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textSize="15dp"
                                android:text="商品订单"
                                android:textColor="@android:color/black"
                                android:background="@android:color/transparent"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <ImageButton
                                android:id="@+id/btn_user_gift_card"
                                android:src="@drawable/act_my_home_card"
                                android:layout_gravity="center_horizontal"
                                android:background="@android:color/transparent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textSize="15dp"
                                android:text="礼物卡"
                                android:textColor="@android:color/black"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_height="15dp"
                        android:layout_width="match_parent"
                        android:background="#C4C5C5" />
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="54dp">
                        <TextView
                            android:id="@+id/tv_user_my_favorable"
                            android:layout_marginLeft="10dp"
                            android:drawableLeft="@drawable/icon_my_home_coupon_45x35"
                            android:layout_centerVertical="true"
                            android:textColor="@android:color/black"
                            android:drawablePadding="10dp"
                            android:text="我的优惠券"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/icon_arrow_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#C4C5C5"
                        />

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="54dp">
                        <TextView
                            android:id="@+id/tv_user_my_movie"
                            android:drawableLeft="@drawable/icon_my_home_movies_43x43"
                            android:layout_centerVertical="true"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="10dp"
                            android:text="我的电影"
                            android:drawablePadding="10dp"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/icon_arrow_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#C4C5C5"
                        />
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="54dp">
                        <TextView
                            android:id="@+id/tv_user_my_collect"
                            android:drawableLeft="@drawable/icon_my_home_favorites_45x45"
                            android:layout_centerVertical="true"
                            android:textColor="@android:color/black"
                            android:text="我的收藏"
                            android:drawablePadding="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/icon_arrow_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <View
                        android:layout_height="20dp"
                        android:layout_width="match_parent"
                        android:background="#C4C5C5"
                        />
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="54dp">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:text="意见反馈"
                            android:textColor="@android:color/black"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/icon_arrow_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#C4C5C5"
                        />
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="54dp">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:text="设置"
                            android:textSize="19sp"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/icon_arrow_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#C8C8C8"
                        />
                    <RelativeLayout
                        android:clickable="true"
                        android:id="@+id/rl_user_scntwo"
                        android:layout_width="match_parent"
                        android:layout_height="54dp">
                        <TextView
                            android:id="@+id/two_dimension_code"
                            android:clickable="true"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:textColor="@android:color/black"
                            android:text="扫描二维码"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/icon_arrow_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#C4C5C5"
                        />
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:textColor="@android:color/black"
                            android:text="商城使用帮助"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/icon_arrow_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#C8C8C8" />
                </LinearLayout>
            </RelativeLayout>
        </com.atguigu.mytime.view.ObservableScrollView>
        <RelativeLayout
            android:background="#0075c4"
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_user_message"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_my_home_message"/>
            <ImageView
                android:id="@+id/iv_user_redicon"
                android:layout_width="wrap_content"
                android:layout_alignRight="@id/iv_user_message"
                android:layout_alignTop="@id/iv_user_message"
                android:layout_height="wrap_content"
                android:src="@drawable/red_icon"/>

        </RelativeLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_user_head_blue"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="40dp"
        android:background="@drawable/video_seekbar_line2"/>


</RelativeLayout>

