<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

    <ImageView
        android:id="@+id/iv_cinima_item_nearest_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cinema_list_nearest_icon"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_cinema_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_cinima_item_nearest_icon"
        android:layout_marginTop="5dp"
        android:text="金逸北京新都店"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_cinema_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cinema_name"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxEms="15"
        android:singleLine="true"
        android:text="北京市通州区梨园镇砖厂南里华远铭悦好天地5号楼301" />]
    <TextView
        android:id="@+id/tv_cinema_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cinema_name"
        android:layout_toRightOf="@id/tv_cinema_address"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="7.7km" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cinema_address"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_cinemalist_icon_3d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cinemalist_3d"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/item_cinemalist_icon_imax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:visibility="gone"
            android:background="@drawable/cinemalist_imax" />

        <ImageView
            android:id="@+id/item_cinemalist_icon_kiosk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:visibility="gone"
            android:background="@drawable/cinemalist_kiosk" />

        <ImageView
            android:id="@+id/item_cinemalist_icon_parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:visibility="gone"
            android:background="@drawable/cinemalist_parking" />

        <ImageView
            android:id="@+id/item_cinemalist_icon_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:visibility="gone"
            android:background="@drawable/cinemalist_vip" />

        <ImageView
            android:id="@+id/item_cinemalist_icon_wififree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:visibility="gone"
            android:background="@drawable/cinemalist_wififree" />
    </LinearLayout>



    <TextView
        android:id="@+id/tv_cinemalist_qi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/tv_cinema_name"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="10dp"
        android:text="起"
        android:textColor="#FCC52F"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_cinemalist_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_cinema_name"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@id/tv_cinemalist_qi"
        android:text="45"
        android:textColor="#FCC52F"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_cinemalist_yuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_cinema_name"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/tv_cinemalist_price"
        android:text="¥"
        android:textColor="#FCC52F"
        android:textSize="16sp" />
    <View
        android:id="@+id/line"
        android:layout_below="@id/ll"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>