<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">



    <LinearLayout
        android:id="@+id/item_discuss_ll_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="3.0dip"

        android:orientation="vertical"
        android:paddingLeft="16.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_discuss_iv_icon"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="2.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/head_h54" />

            <TextView
                android:id="@+id/item_discuss_tv_name"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/font_size_small" />

            <LinearLayout
                android:id="@+id/item_discuss_ll_score_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_discuss_score_ping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/st_ping"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/font_size_small" />

                <!--<com.mtime.widgets.ScoreLabel-->
                    <!--android:id="@id/item_discuss_score_label"-->
                    <!--android:layout_width="42.0dip"-->
                    <!--android:layout_height="20.0dip"-->
                    <!--app:postfixColor="@color/dark_green"-->
                    <!--app:postfixSize="6.0sp"-->
                    <!--app:prefixColor="@color/dark_green"-->
                    <!--app:prefixSize="10.0sp" />-->
            </LinearLayout>
        </LinearLayout>

        <!--<com.mtime.widgets.EllipsizingTextView-->
            <!--android:id="@id/item_discuss_tv_content"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="@color/black_color"-->
            <!--android:textSize="@dimen/font_size_normal" />-->

        <TextView
            android:id="@+id/item_discuss_tv_reply"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>
</LinearLayout>