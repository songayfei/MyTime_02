<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="165dp">
    <ImageView
        android:background="@drawable/tip_img"
        android:id="@+id/iv_play_movie_item"
        android:layout_width="65dp"
        android:layout_height="120dp"
        />
    <TextView
        android:layout_toRightOf="@id/iv_play_movie_item"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="星球大战：原力觉醒"
        android:id="@+id/tv_tcn_play_movie_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_below="@id/tv_tcn_play_movie_item"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_play_movie_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="5dp"
            android:visibility="gone"
            android:padding="2dp"
            android:textSize="15sp"
            android:text="有198人想看"
            android:drawableLeft="@drawable/quot_film_on"
            android:textColor="#f80"
            android:id="@+id/tv_typeorwant_play_movie_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="5dp"
            android:visibility="gone"
            android:padding="1dp"
            android:textSize="13sp"
            android:text="“有一种情怀叫星战"
            android:textColor="#f80"
            android:id="@+id/tv_commonSpecial_play_movie_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:padding="2dp"
            android:textSize="10sp"
            android:text="12月8日上映"
            android:id="@+id/tv_palytime_play_movie_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:padding="2dp"
            android:textSize="10sp"
            android:text="今日139家上映555场"
            android:id="@+id/tv_palycount_play_movie_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_play_movie_item"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:background="@drawable/rectangle3d"
            android:id="@+id/iv_3dmovie_type_buyticket"
            android:layout_width="wrap_content"
            android:layout_height="19dp" />
        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rectangleimax"
            android:id="@+id/iv_imaxmovie_type_buyticket"
            android:layout_width="wrap_content"
            android:layout_height="19dp" />
        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rectanglelarget"
            android:id="@+id/iv_bigmovie_type_buyticket"
            android:layout_width="wrap_content"
            android:layout_height="19dp" />
    </LinearLayout>
    <Button
        android:visibility="gone"
        android:textColor="#fff"
        android:text="购票"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/home_button_buyticket2"
        android:id="@+id/btn_buymovie_buyticket"
        android:layout_width="55dp"
        android:layout_height="25dp" />
    <Button
        android:visibility="gone"
        android:textColor="#008000"
        android:text="查影讯"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/title_bar_movie_cinema_switch_view_background"
        android:id="@+id/btn_messagemovie_buyticket"
        android:layout_width="55dp"
        android:layout_height="25dp" />
    <Button
        android:visibility="gone"
        android:textColor="#fff"
        android:text="预售"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/home_button_movie2"
        android:id="@+id/btn_willbuymovie_buyticket"
        android:layout_width="55dp"
        android:layout_height="25dp" />
</RelativeLayout>