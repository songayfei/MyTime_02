<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.atguigu.refreshlistview.RefreshListView
            android:id="@+id/lv_mall_pager"
            android:dividerHeight="10dp"
            android:divider="#22000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.atguigu.refreshlistview.RefreshListView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/mall_home_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#4C61EA"
                android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/mall_title"
            android:padding="5dp"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/ib_mall_home_scan"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mall_home_scan"/>
            <TextView
                android:id="@+id/tv_title_search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_height="35dp"
                android:clickable="true"
                android:drawableLeft="@drawable/title_bar_search_zoomin"
                android:background="@drawable/mall_comment_edit"
                android:text="@string/mall_title_sea_text"
                android:textColor="#bbaaaaaa"/>
            <ImageButton
                android:id="@+id/ib_mall_home_cart"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mall_home_cart_icon"/>

        </LinearLayout>
    </FrameLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/netError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/loading_failed"/>
</RelativeLayout>
