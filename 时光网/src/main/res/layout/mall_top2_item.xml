<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#33ff0000"
        app:layout_heightPercent="34%"
        app:layout_widthPercent="100%"
        android:gravity="center_vertical">

        <com.atguigu.mytime.view.HorizontalListView
            android:id="@+id/hlv_mall_top2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="60%"
        app:layout_widthPercent="100%">

        <com.atguigu.mytime.view.NoScrollGridView
            android:id="@+id/nsg_mall_top2"
            android:layout_width="0dp"
            android:layout_height="0dp"
></com.atguigu.mytime.view.NoScrollGridView>

    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/more_product_bg"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/find_news_img_detail_top_right_arrow"
        android:gravity="center"
        android:text="更多商品"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_heightPercent="6%"
        app:layout_widthPercent="30%" />
</com.zhy.android.percent.support.PercentLinearLayout>
