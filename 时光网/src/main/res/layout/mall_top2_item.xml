<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_top2_bg"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/top2_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/hlv_mall_top2"
            android:layout_marginTop="65dp"
            android:scrollbars="none"
            android:layout_weight="1"
            android:foregroundGravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"

            android:textColor="#000000"
            android:text="this is english"
            android:layout_above="@+id/tv_2"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="this is english"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
       android:layout_weight="3">

        <com.atguigu.mytime.view.NoScrollGridView
            android:id="@+id/nsg_mall_top2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"/>

    </LinearLayout>

    <TextView
        android:id="@+id/more_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/more_product_bg"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/find_news_img_detail_top_right_arrow"
        android:gravity="center"
        android:text="@string/more"
        android:paddingLeft="10dp"
        android:paddingRight="6dp"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
    />
</LinearLayout>
