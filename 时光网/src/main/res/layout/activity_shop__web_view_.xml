<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <WebView
        android:id="@+id/wv_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/seek_color02"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <ImageView
            android:id="@+id/im_share_rollback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/title_btn_back_background" />

        <ImageView
            android:id="@+id/im_share_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/mall_home_cart_icon"
            android:layout_marginRight="50dp" />

        <ImageView
            android:id="@+id/im_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/title_bar_share"
            android:layout_marginRight="10dp" />
    </RelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:background="@color/webview_color05"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/mall_comment_submit_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/webview_text02"
            android:textColor="@color/welcom_text03"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_solid_orange_h80"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/welcom_text04"
            android:text="@string/webview_text03"
            android:textSize="20sp" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>
